<h1>Receive a registration code to sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
	<%= form_tag(regcodes_create_path, method: "post") do %>
	  <%= label_tag(:email, "Stanford email:") %>
	  <%= text_field_tag(:email, "@stanford.edu", class: 'form-control' ) %>
	  <%= submit_tag("Receive registration code", class: "btn btn-primary") %>
	<% end %>
  </div>
</div>

