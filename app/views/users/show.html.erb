<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
    <div class="col-md-8">
    <% if @user.ideas.any? %>
      <h3>ideas (<%= @user.ideas.count %>)</h3>
      <ol class="ideas">
        <%= render @ideas %>
      </ol>
      <%= will_paginate @ideas %>
    <% end %>
  </div>
</div>
<%= Thredded::ApplicationController.render partial: 'thredded/users/posts', locals: {
      posts: Thredded.posts_page_view(scope: @user.thredded_posts.order_newest_first.limit(5),
                                      current_user: current_user) } %><%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
