<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
 
  <%= f.label :name %>
  <p>This will be your screen name displayed with your account, you can choose to use your real name or a pseudonym.</p>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :email %>
  <p>This email address will be linked to your account and used to contact you. You do not have to use your Stanford email address. </p>
  <%= f.email_field :email, class: 'form-control' %>

  <%= f.label :password %>
  <p>Minimum 6 characters</p>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, class: 'form-control' %>
  
  <%= f.hidden_field :code_token, value: @code_token%>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>